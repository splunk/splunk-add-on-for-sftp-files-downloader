{
    "meta": {
        "name": "TA-sftp-files-downloader",
        "displayName": "SFTP Files Downloader",
        "version": "1.0.0",
        "restRoot": "TA_sftp_files_downloader",
        "schemaVersion": "0.0.3"
    },
    "pages": {
        "configuration": {
            "title": "Configuration",
            "description": "Set up your add-on",
            "tabs": [
                {
                    "name": "logging",
                    "title": "Logging",
                    "entity": [
                        {
                            "field": "loglevel",
                            "label": "Log level",
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG",
                                        "value": "DEBUG"
                                    },
                                    {
                                        "label": "INFO",
                                        "value": "INFO"
                                    },
                                    {
                                        "label": "WARNING",
                                        "value": "WARNING"
                                    },
                                    {
                                        "label": "ERROR",
                                        "value": "ERROR"
                                    },
                                    {
                                        "label": "CRITICAL",
                                        "value": "CRITICAL"
                                    }
                                ]
                            },
                            "defaultValue": "INFO"
                        }
                    ]
                }
            ]
        },
        "inputs": {
            "title": "Inputs",
            "description": "Manage your data inputs",
            "table": {
                "header": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    }
                ],
                "moreInfo": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    },
                    {
                        "field": "ssh_server",
                        "label": "Hostname or IP of SFTP server"
                    },
                    {
                        "field": "port",
                        "label": "Port"
                    },
                    {
                        "field": "username",
                        "label": "Username"
                    },
                    {
                        "field": "password",
                        "label": "Password"
                    },
                    {
                        "field": "key_file_type",
                        "label": "Key file type"
                    },
                    {
                        "field": "key_file_path",
                        "label": "Key file path (Recommended)"
                    },
                    {
                        "field": "ssh_server_known_hosts_path",
                        "label": "Server known hosts file path"
                    },
                    {
                        "field": "server_file_path",
                        "label": "Server file path"
                    },
                    {
                        "field": "burn_after_download",
                        "label": "Remove files after download"
                    },
                    {
                        "field": "destination_file_path",
                        "label": "Destination file path"
                    }
                ],
                "actions": [
                    "edit",
                    "enable",
                    "delete",
                    "clone"
                ]
            },
            "services": [
                {
                    "name": "sftp_files_downloader",
                    "title": "SFTP files downloader",
                    "entity": [
                        {
                            "field": "name",
                            "label": "Name",
                            "type": "text",
                            "help": "Enter a unique name for the data input",
                            "required": true,
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^[a-zA-Z]\\w*$",
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                },
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 100,
                                    "errorMsg": "Length of input name should be between 1 and 100"
                                }
                            ]
                        },
                        {
                            "field": "interval",
                            "label": "Interval",
                            "type": "text",
                            "required": true,
                            "help": "Time interval of input in seconds.",
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$",
                                    "errorMsg": "Interval must be an integer."
                                }
                            ]
                        },
                        {
                            "field": "index",
                            "label": "Index",
                            "type": "singleSelect",
                            "defaultValue": "default",
                            "options": {
                                "endpointUrl": "data/indexes",
                                "createSearchChoice": true,
                                "denyList": "^_.*$"
                            },
                            "required": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 80,
                                    "errorMsg": "Length of index name should be between 1 and 80."
                                }
                            ]
                        },
                        {
                            "field": "ssh_server",
                            "label": "Hostname or IP of SFTP server",
                            "help": "",
                            "required": true,
                            "type": "text",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "port",
                            "label": "Port",
                            "help": "",
                            "required": true,
                            "type": "text",
                            "defaultValue": "22",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "username",
                            "label": "Username",
                            "help": "Username for SSH access",
                            "required": true,
                            "type": "text",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "password",
                            "label": "Password",
                            "help": "Password for SSH access (not required if using private key authentication)",
                            "required": false,
                            "type": "text",
                            "encrypted": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of password is 8192"
                                }
                            ]
                        },
                        {
                            "field": "key_file_type",
                            "label": "Key file type",
                            "help": "",
                            "required": true,
                            "type": "singleSelect",
                            "defaultValue": "RSA",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "value": "RSA",
                                        "label": "RSA"
                                    },
                                    {
                                        "value": "DSA",
                                        "label": "DSA"
                                    }
                                ]
                            }
                        },
                        {
                            "field": "key_file_path",
                            "label": "Key file path (Recommended)",
                            "help": "Location of the key file (not required if using username and password authentication)",
                            "required": false,
                            "type": "text",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "ssh_server_known_hosts_path",
                            "label": "Server known hosts file path",
                            "help": "Location of the known hosts file (not required if using username and password authentication)",
                            "required": false,
                            "type": "text",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "server_file_path",
                            "label": "Server file path",
                            "help": "The server file path for files to be downloaded",
                            "required": true,
                            "type": "text",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "burn_after_download",
                            "label": "Remove files after download",
                            "help": "Remove files on the server after downloading",
                            "required": false,
                            "type": "checkbox"
                        },
                        {
                            "field": "destination_file_path",
                            "label": "Destination file path",
                            "help": "Local path to save the files to",
                            "required": true,
                            "type": "text",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}